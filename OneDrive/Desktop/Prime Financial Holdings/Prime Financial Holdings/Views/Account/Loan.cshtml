<!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">

      <div class="container" data-aos="fade-up">

        <header class="section-header">
          <h2>Loan Schemes</h2>
          <p>Check our different payment plans</p>
        </header>

        <div class="row gy-4" data-aos="fade-left">

          <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="100">
            <div class="box">
              <h3 style="color: #07d5c0;">Free Plan</h3>
              <div class="price"><sup>$</sup>0<span> / mo</span></div>
              <img src="~/images/pricing-free.png" class="img-fluid" alt="">
              <ul>
                <li>Easy</li>
                <li>Automatic</li>
                <li>Help Available</li>
                <li class="na">Loan Officer Guidance</li>
                <li class="na">Yearly Projection Rate</li>
              </ul>
              <a class="btn-buy" asp-area="" asp-controller="Account" asp-action="LoanApply">Apply</a>
            </div>
          </div>

          <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="200">
            <div class="box">
              <span class="featured">Featured</span>
              <h3 style="color: #65c600;">Starter Plan</h3>
              <div class="price"><sup>$</sup>19<span> / mo</span></div>
              <img src="~/images/pricing-starter.png" class="img-fluid" alt="">
              <ul>
                <li>Easy</li>
                <li>Automatic</li>
                <li>Help Available</li>
                <li >Loan Officer Guidance</li>
                <li class="na">Yearly Projection Rate</li>
              </ul>
              <a class="btn-buy" asp-area="" asp-controller="Account" asp-action="LoanApply">Apply</a>
            </div>
          </div>

          <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="300">
            <div class="box">
              <h3 style="color: #ff901c;">Business Plan</h3>
              <div class="price"><sup>$</sup>29<span> / mo</span></div>
              <img src="~/images/pricing-business.png" class="img-fluid" alt="">
              <ul>
                <li>Easy</li>
                <li>Automatic</li>
                <li>Help Available</li>
                <li>Loan Officer Guidance</li>
                <li>Yearly Projection Rate</li>
              </ul>
              <a class="btn-buy" asp-area="" asp-controller="Account" asp-action="LoanApply">Apply</a>
            </div>
          </div>

          <div class="col-lg-3 col-md-6" data-aos="zoom-in" data-aos-delay="400">
            <div class="box">
              <h3 style="color: #ff0071;">Ultimate Plan</h3>
              <div class="price"><sup>$</sup>49<span> / mo</span></div>
              <img src="~/images/pricing-ultimate.png" class="img-fluid" alt="">
              <ul>
               <li>Easy</li>
                <li>Automatic</li>
                <li>Help Available</li>
                <li>Loan Officer Guidance</li>
                <li>Yearly Projection Rate</li>
              </ul>
              <a class="btn-buy" asp-area="" asp-controller="Account" asp-action="LoanApply">Apply</a>
            </div>
          </div>

        </div>

      </div>

    </section><!-- End Pricing Section -->


