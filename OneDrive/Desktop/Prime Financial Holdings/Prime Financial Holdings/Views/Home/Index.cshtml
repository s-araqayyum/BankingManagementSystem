@model Prime_Financial_Holdings.Models.User
@{
    ViewData["Title"] = "Index";
	Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
  	<title>Prime Financial Holdings</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="css/style.css">

	</head>
	<body class="img js-fullheight" style="background-image: url(images/wallpaperflare.com_wallpaper.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Prime Financial Holdings</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Have an account?</h3>
		   <form method = "post" class="signin-form" asp-controller="Home" asp-for="Username">
	      		      		<div class="form-group">
		      			<input  asp-action="change" asp-controller="Home" asp-for="Username" type="text" class="form-control" placeholder="Username" required>
		      		<span asp-validation-for="Username" class= "text-danger"></span>
					  </div>
	            <div class="form-group">
	              <input asp-for = "Password"  asp-action="change" asp-controller="Home" id="password-field" type="password" class="form-control" placeholder="Password" required>
	              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
	          <span asp-validation-for="Password" class= "text-danger"></span> 
			  </div>
	            <div class="form-group">
	            	<button type="submit" asp-controller="Home" asp-action="change" class="form-control btn btn-primary submit px-3">Sign In</button>
	            </div>
				@if (TempData["Alert Message"] != null){
	  <div class = "alert alert-success">
		  <strong>Feedback Submitted!</strong @TempData["Alert Message"]
			  </div>
  }
  else{
	 <div class = "alert alert-error">
		  <strong>To Enter, Please Put Valid Data ♡ </strong @TempData["Alert Message"]
			  </div>
  }
	            <div class="form-group d-md-flex">
	            	<div class="w-50">
		            	<label class="checkbox-wrap checkbox-primary">Remember Me
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#" style="color: #fff">Forgot Password</a>
								</div>
	            </div>
	          </form>
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="js/jquery.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.js"></script>

	</body>
</html>


