@model Feedback
@{
    ViewData["Title"] = "Feedback";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Contact V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/mainn.css">
<!--===============================================================================================-->
</head>
<body>
	<br />
	<br />
	<div style = "position:relative; left:80px; top:2px; background-color:yellow;">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="https://i.pinimg.com/originals/41/d6/72/41d672b9c65faf635ed9da136f935c31.png" alt="IMG">
			</div>

			<form class="contact1-form validate-form" asp-controller="Feedback" asp-action = "Index">
				<span class="contact1-form-title">
					We want your valuable feedback ♡
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input asp-for = "userName" class="input1" type="text" name="userName" placeholder="Enter your username">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Message is required">
					<textarea class="input1" asp-for="feedbackMessage" name="feedbackMessage" placeholder="Message"></textarea>
					<span class="shadow-input1"></span>
				</div>

				<div class="container" style="text-align:center">
  <input type="submit" class="btn btn-info" value="Submit">
  @if (TempData["Alert Message"] != null){
	  <div class = "alert alert-success">
		  <strong>Feedback Submitted!</strong @TempData["Alert Message"]
			  </div>
  }
  else{
	 <div class = "alert alert-error">
		  <strong>Please Carefully Fill the Form ;) </strong @TempData["Alert Message"]
			  </div>
  }
			</form>
		</div>
	</div>




<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="vendor/tilt/tilt.jquery.min.js"></script>
	<script >
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>

